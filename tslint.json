{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": { "options": [120] },
        "indent": [true, "spaces", 2],
        "interface-name": false,
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "arrow-parens": false,
        "object-literal-sort-keys": false
    }
}