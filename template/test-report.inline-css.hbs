    left: 0;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .card .label {
    background-color: #767676;
    border: 2px solid #767676;
    color: white;
    padding: 0.25rem 0.75rem;
    font-size: 0.875rem;
    text-transform: uppercase;
    display: inline-block;
    margin: 0;
    border-radius: 0.25rem;
